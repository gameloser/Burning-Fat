<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.dal.a4176_project.ProfileFragment">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="22dp"
        android:text="Full name" />

    <EditText
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:ems="6"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age2"
        android:layout_below="@+id/name2"
        android:layout_marginTop="12dp"
        android:text="Age" />

    <EditText
        android:id="@+id/age2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name2"
        android:layout_below="@+id/age"
        android:ems="6"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age2"
        android:layout_below="@+id/age2"
        android:layout_marginTop="11dp"
        android:text="Gender" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gender2"
        android:layout_below="@+id/gender2"
        android:layout_marginTop="15dp"
        android:text="Height" />

    <EditText
        android:id="@+id/height2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/height"
        android:layout_below="@+id/height"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/cm"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/height2"
        android:layout_alignBottom="@+id/height2"
        android:layout_toEndOf="@+id/height2"
        android:ems="10"
        android:text="CM"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/height2"
        android:layout_marginTop="19dp"
        android:text="Weight" />

    <EditText
        android:id="@+id/weight2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight"
        android:layout_below="@+id/weight"
        android:ems="10" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weight2"
        android:layout_alignBottom="@+id/weight2"
        android:layout_toEndOf="@+id/weight2"
        android:ems="10"
        android:text="Kg"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/medicalhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight2"
        android:layout_below="@+id/weight2"
        android:layout_marginTop="11dp"
        android:text="Medical History" />

    <EditText
        android:id="@+id/medicalhistory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/height2"
        android:layout_below="@+id/medicalhistory"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/submit"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/SelectPic"
        android:layout_below="@+id/medicalhistory"
        android:layout_marginTop="17dp"
        android:text="Submit" />

    <CheckBox
        android:id="@+id/gender2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gender"
        android:layout_below="@+id/gender"
        android:text="Male" />

    <CheckBox
        android:id="@+id/gender3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/gender2"
        android:layout_alignBottom="@+id/gender2"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/gender2"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="Female" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/name"
        android:layout_toEndOf="@+id/medicalhistory2"
        android:src="@drawable/doge" />

    <Button
        android:id="@+id/SelectPic"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/age2"
        android:layout_alignBottom="@+id/age2"
        android:layout_alignStart="@+id/imageView"
        android:text="SELECT"
        android:textSize="10sp" />


</RelativeLayout>
